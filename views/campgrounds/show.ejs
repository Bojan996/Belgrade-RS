<%- include("../partials/header") %>

<div class="container-show">
    <div class="row">
        <div class="col-md-4">
            <p class="lead">Other Restaurants</p>
                    <div class="card mb-5" style="max-width: 540px; height: 100px;">
                        <div class="row no-gutters">
                          <div class="col-md-5">
                            <img src="<%= campgrounds[0].image %>" class="card-img" alt="..." style="height: 99px;">
                          </div>
                          <div class="col-md-7">
                            <div class="card-body pt-2">
                              <h5 class="card-title"><a href="/campgrounds/<%= campgrounds[0].id %>" style="color: black"><%= campgrounds[0].name %></a></h5>
                              <p class="card-text"><small class="text-muted">Last updated <%=  Math.floor(Math.random() * 59) %> minutes ago</small></p>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card mb-5" style="max-width: 540px; height: 100px;">
                        <div class="row no-gutters">
                          <div class="col-md-5">
                            <img src="<%= campgrounds[1].image %>" class="card-img" alt="..." style="height: 99px;">
                          </div>
                          <div class="col-md-7">
                            <div class="card-body pt-2">
                              <h5 class="card-title"><a href="/campgrounds/<%= campgrounds[1].id %>" style="color: black"><%= campgrounds[1].name %></a></h5>
                              <p class="card-text"><small class="text-muted">Last updated <%=  Math.floor(Math.random() * 59) %> minutes ago</small></p>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card mb-5" style="max-width: 540px; height: 100px;">
                        <div class="row no-gutters">
                          <div class="col-md-5">
                            <img src="<%= campgrounds[2].image %>" class="card-img" alt="..." style="height: 99px;">
                          </div>
                          <div class="col-md-7">
                            <div class="card-body pt-2">
                              <h5 class="card-title"> <a href="/campgrounds/<%= campgrounds[2].id %>" style="color: black"><%= campgrounds[2].name %></a></h5>
                              <p class="card-text"><small class="text-muted">Last updated <%=  Math.floor(Math.random() * 59) %> minutes ago</small></p>
                            </div>
                          </div>
                        </div>
                      </div>
            </div>

        <div class="col-md-8">
            <div class="card">
                <img class="img-responsive images-show" src="<%= campground.image %>" alt="">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <h1 class="card-title display-4"><a href="#" style="text-decoration: none; color: black"><%= campground.name %></a></h1>
                            <h4>$<%= campground.price %>/night</h4>
                        </div>
                        <p><em>Submitted by:   <%= campground.author.username %></em></p>
                        <p class="card-text mb-5"><%= campground.description %></p>

                        <% if(currentUser && campground.author.id.equals(currentUser._id)){ %> 
                            <div class="d-flex justify-content-start">
                                <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-outline-warning mr-3">Edit </a>
                                <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        <% } %>
                        
                  </div>
            </div>


            <div class="card mt-5">
                <div class="card-header d-flex justify-content-end">
                    
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
                    <div class="card-body">
                <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between">
                                    <strong><%= comment.author.username %></strong>
                                    <span><%= Math.floor(Math.random() *60) %> days ago</span>
                                </div>
                                <p><%= comment.text %></p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %> 
                                <div class="d-flex justify-content-start">
                                    <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-outline-danger mr-3">DELETE</button>
                                    </form>
                                    <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-outline-warning">Edit</a>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <hr>
                        <% }); %>
                    </div>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>